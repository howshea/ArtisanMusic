<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryRed</item>
        <item name="colorPrimaryDark">@color/colorPrimaryRed</item>
        <item name="colorAccent">@color/colorPrimaryRed</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="CommonTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryRed</item>
        <item name="colorPrimaryDark">@color/colorPrimaryRed</item>
        <item name="colorAccent">@color/colorPrimaryRed</item>
    </style>

    <style name="PlayStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="HomePageStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="SmallTextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="TitleTextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SongTitleAppearance">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/song_title</item>
    </style>

    <style name="SongBottomAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/song_title</item>
    </style>

    <style name="DialogTitleAppearance">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/song_title</item>
    </style>


    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#58B2DC</item>
        <item name="android:windowTitleStyle">@style/DialogTitleAppearance</item>
    </style>
</resources>
