<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/play_bottom_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="#e0ffffff"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/playbar_cover_image_view"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/playbar_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:maxLines="1"
            android:textColor="#333333"
            android:textSize="16sp"
            tools:text="青衣谣"/>

        <TextView
            android:id="@+id/playbar_dec_text_view"
            style="@style/SmallTextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="垃圾垃圾"/>
    </LinearLayout>


    <ImageView
        android:id="@+id/playbar_playlist_image_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_play_bottom_bar_playlist"
        android:background="?android:attr/selectableItemBackgroundBorderless"/>

    <ImageView
        android:id="@+id/playbar_play_pause_image_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/playbar_play_pause_selector"
        android:background="?android:attr/selectableItemBackgroundBorderless"/>

    <ImageView
        android:id="@+id/playbar_next_song_image_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_play_bottom_bar_next"
        android:background="?android:attr/selectableItemBackgroundBorderless"/>

</LinearLayout>