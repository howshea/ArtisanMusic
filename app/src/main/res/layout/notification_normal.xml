<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="64dp"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/noti_album_img"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:scaleType="centerCrop"
        tools:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/noti_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/song_title"
            android:textSize="16sp"
            tools:text="死了都要爱"/>

        <TextView
            android:id="@+id/noti_subtitle_tv"
            style="@style/SmallTextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            tools:text="邓紫棋"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/noti_pre_img"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:paddingLeft="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_noti_pre"/>

    <ImageView
        android:id="@+id/noti_play_pause"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:paddingLeft="16dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_noti_pause"/>

    <ImageView
        android:id="@+id/noti_next_img"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:paddingLeft="16dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_noti_next"/>

    <ImageView
        android:id="@+id/noti_close_img"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:paddingLeft="24dp"
        android:paddingRight="16dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_noti_close"/>
</LinearLayout>